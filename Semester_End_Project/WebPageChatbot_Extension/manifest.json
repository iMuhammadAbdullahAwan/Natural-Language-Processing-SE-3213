{
  "manifest_version": 3,
  "name": "WebPage AI Chatbot",
  "version": "1.0",
  "description": "Real-time AI chatbot that answers questions about the current webpage using NLP and GenAI",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WebPage AI Chatbot"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["chatbot-widget.html", "chatbot-widget.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
